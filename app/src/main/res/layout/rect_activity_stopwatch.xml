<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StopwatchActivity"
    tools:deviceIds="wear_square"
    android:id="@+id/constraintLayout">

    <TextView
        android:id="@+id/digits"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="00:00:00"
        android:textSize="36sp"
        android:textColor="@color/primary_text"
        tools:ignore="HardcodedText"
        android:contentDescription="@string/stopwatch_description"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        tools:layout_constraintBottom_creator="1" />

    <ImageView
        android:id="@+id/topIcon"
        android:background="@drawable/ic_stopwatch_selected"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/digits"
        android:layout_marginBottom="16dp" />

    <ImageButton
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resetButton"
        android:contentDescription="@string/reset_description"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="40dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/playPauseButton"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/playPauseButton"
        tools:layout_constraintBottom_creator="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playPauseButton"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:visibility="visible"
        android:background="@android:drawable/ic_media_play"
        android:contentDescription="@string/play_description"
        app:layout_constraintTop_toBottomOf="@+id/digits"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="40dp" />

</android.support.constraint.ConstraintLayout>
