<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/time_picker_fragment"
    tools:deviceIds="wear_square"
    tools:context="org.dwallach.xstopwatchcomplication.TimePickerFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:touchscreenBlocksFocus="false"
    style="@style/Theme.WearDiag"
    android:background="?android:attr/selectableItemBackgroundBorderless"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

            <NumberPicker
                android:layout_width="59dp"
                android:layout_height="17dp"
                android:id="@+id/hoursPicker"
                app:layout_constraintLeft_toLeftOf="@+id/time_picker_fragment"
                android:layout_marginLeft="8dp"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintTop_toTopOf="@+id/time_picker_fragment"
                app:layout_constraintRight_toLeftOf="@+id/minutesPicker"
                android:layout_marginRight="8dp"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/pickerResetButton"
                android:layout_marginBottom="8dp" />

            <NumberPicker
                android:layout_width="59dp"
                android:layout_height="17dp"
                android:id="@+id/minutesPicker"
                app:layout_constraintTop_toTopOf="@+id/time_picker_fragment"
                app:layout_constraintRight_toRightOf="@+id/time_picker_fragment"
                android:layout_marginRight="8dp"
                tools:layout_constraintRight_creator="1"
                app:layout_constraintBottom_toTopOf="@+id/pickerOkButton"
                android:layout_marginBottom="8dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickerResetButton"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="@drawable/ripple"
                android:contentDescription="@string/reset_description"
                app:layout_constraintLeft_toLeftOf="@+id/time_picker_fragment"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/time_picker_fragment"
                android:layout_marginBottom="16dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickerOkButton"
                android:src="@android:drawable/ic_menu_set_as"
                android:background="@drawable/ripple"
                android:contentDescription="@string/edit_description"
                app:layout_constraintRight_toRightOf="@+id/time_picker_fragment"
                android:layout_marginRight="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/time_picker_fragment"
                android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
